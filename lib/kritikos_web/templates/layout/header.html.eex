<%= render_layout "app.html", assigns do %>
    <header id="header">
        <div class="wrap">
            <span class="logo"><a href="/">Kritikos</a></span>
            <button id="<%= @button.id %>" class="landing-action" onclick="window.location.href='<%= @button.href %>'"><%= @button.text %></button>
        </div>
    </header>

    <%= render @view_module, @view_template, assigns %>
<% end %>